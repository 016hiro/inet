subdirs:
	cd demo2 && cd && nmake /nologo /f Makefile.vc
	cd ldp-mpls1 && cd && nmake /nologo /f Makefile.vc
	cd samples && cd && nmake /nologo /f Makefile.vc
	cd Tester && cd && nmake /nologo /f Makefile.vc
	cd TestTE1 && cd && nmake /nologo /f Makefile.vc
	cd TestTE2 && cd && nmake /nologo /f Makefile.vc
	cd TestTE3 && cd && nmake /nologo /f Makefile.vc
	cd TestTE4 && cd && nmake /nologo /f Makefile.vc
	cd TestTE4Old && cd && nmake /nologo /f Makefile.vc
	cd TestTE5 && cd && nmake /nologo /f Makefile.vc
	cd TestTE6 && cd && nmake /nologo /f Makefile.vc


doc: neddoc doxy

neddoc:
	@opp_neddoc -a

doxy: doxy.cfg
	@doxygen doxy.cfg

clean:
	-del *.obj *_n.cc *_n.h *_m.cc *_m.h $(TARGET)$(EXE_SUFFIX) 2>NUL
	-del *.vec *.sca 2>NUL
	-for %%i in ( $(SUBDIRS) ) do cd %%i && nmake /nologo /f Makefile.vc clean && cd ..

depend:
	$(MAKEDEPEND) $(INCLUDE_PATH) -f Makefile.vc -- *.cc

re-makemake:
	opp_nmakemake_vc -f   #recreate Makefile

