
# filename: server1.irt
# routing table server no. 1 of TCP Client/Server network
# author: Jochen Reber


ifconfig:

# ethernet card 0 to client 2
name: ppp0 encap: Point-to-Point 	inet_addr: 10.0.0.1 	
MTU: 1500	Metric: 1 

# ethernet card 1 to client 3
name: ppp1		encap: Point-to-Point		inet_addr: 10.0.0.5 	
MTU: 1500	Metric: 1 

# ethernet card 2 to client 3
name: ppp2		encap: Point-to-Point		inet_addr: 10.0.0.9 	
MTU: 1500	Metric: 1 

ifconfigend.

route:
10.0.0.2		*				255.255.255.255 H	0	ppp0
10.0.0.3		*				255.255.255.255 H	0	ppp1
10.0.0.4		*				255.255.255.255 H	0	ppp2

routeend.

