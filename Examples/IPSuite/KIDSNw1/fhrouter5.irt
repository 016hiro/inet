
# filename: fhrouter5.irt
# routing table for First Hop Router, No 5 of KIDS Network 1
# connected to host 3 and Border Router 4
# author: Jochen Reber


ifconfig:

# ethernet card 0 to host 3
name: eth0	inet_addr: 172.1.2.1	MTU: 1500	Metric: 1  BROADCAST MULTICAST

# router connection 0 to interior router 2
name: ppp0	inet_addr: 172.1.1.1	MTU: 12000	Metric: 1

ifconfigend.

route:
172.1.2.0		*				255.255.255.255 G	0	eth0
default:		172.1.1.0		255.0.0.0		G	0	ppp0

routeend.

