
# filename: mcrouter1.mrt
# routing table for router 1 of multicast network 2
# connected to host 1,2,3 and router 2
# author: Jochen Reber


ifconfig:

# ethernet card 0 to host 1
name: eth0  inet_addr: 172.0.0.11   MTU: 1500   Metric: 1  BROADCAST MULTICAST

# ethernet card 1 to host 2
name: eth1  inet_addr: 172.0.0.12   MTU: 1500   Metric: 1  BROADCAST MULTICAST

# ethernet card 2 to host 3
name: eth2  inet_addr: 172.0.0.13   MTU: 1500   Metric: 1  BROADCAST MULTICAST

# PPP link to router 2
name: ppp0  inet_addr: 172.1.0.0    MTU: 512000     Metric: 1

ifconfigend.

route:
172.0.0.1       *               255.255.255.255 H   0   eth0
172.0.0.2       *               255.255.255.255 H   0   eth1
172.0.0.3       *               255.255.255.255 H   0   eth2
default:        172.1.0.1       0.0.0.0         G   0   ppp0

225.0.0.1       *               255.255.255.255 H   0   eth0
225.0.0.1       *               255.255.255.255 H   0   eth1
225.0.0.1       *               255.255.255.255 H   0   eth2

225.0.0.2       172.1.0.1       255.255.255.255 G   0   ppp0
225.0.0.3       172.1.0.1       255.255.255.255 G   0   ppp0

225.0.1.1       *               255.255.255.255 H   0   eth0
225.0.1.1       172.1.0.1       255.255.255.255 G   0   ppp0

225.0.1.2       *               255.255.255.255 H   0   eth1
225.0.1.2       *               255.255.255.255 H   0   eth2
225.0.1.2       172.1.0.1       255.255.255.255 G   0   ppp0

225.0.2.1       *               255.255.255.255 H   0   eth1
225.0.2.1       *               255.255.255.255 H   0   eth2
225.0.2.1       172.1.0.1       255.255.255.255 G   0   ppp0

routeend.

