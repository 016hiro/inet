
# filename: mcrouter2.mrt
# routing table for router 2 of multicast network
# connected to host 4,5 and router 1
# author: Jochen Reber


ifconfig:

# ethernet card 0 to host 4
name: eth0		encap: Ethernet		HWaddr: 00:90:27:CB:AB:1
inet_addr: 10.0.1.1 	Bcast: 10.10.255.255 	Mask: 255.255.255.0	
MTU: 1500	Metric: 1  BROADCAST MULTICAST 

# ethernet card 1 to host 5
name: eth1		encap: Ethernet		HWaddr: 00:90:27:CB:AB:2
inet_addr: 10.1.1.1 	Bcast: 10.10.255.255 	Mask: 255.255.255.0	
MTU: 1500	Metric: 1  BROADCAST MULTICAST 

# PPP link to router 2
name: ppp0      encap: PPP          inet_addr: 10.2.1.2
MTU: 1500   Metric: 1

ifconfigend.

route:
10.0.1.2		*				255.255.255.255 H	0	eth0
10.0.1.3		*				255.255.255.255 H	0	eth1
10.0.0.0		10.3.0.4		255.255.255.0 	G	0	ppp0

225.0.0.1		*				255.255.255.255 H	0	eth1
225.0.0.1		10.3.0.4		255.255.255.255 G	0	ppp0

230.0.0.1		*				255.255.255.255 H	0	eth0
230.0.0.1		*				255.255.255.255 H	0	eth1
230.0.0.1		10.3.0.4		255.255.255.255 G	0	ppp0

230.0.1.0		10.3.0.4		255.255.255.255 G	0	ppp0

230.0.1.1		*				255.255.255.255 H	0	eth0
230.0.1.1		*				255.255.255.255 H	0	eth1

routeend.

