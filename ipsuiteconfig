ROOT=$(HOME)/IPSuite
#ROOT=/cygdrive/d/home/IPSuite

LIBXML_INCLUDES= -I/usr/include/libxml2
LIBXML_LIBS= -lxml2

include $(ROOT)/omnetppconfig

INCLUDE_PATH+= $(LIBXML_INCLUDES)
LIBS+= $(LIBXML_LIBS)
