<?xml version="1.0"?>
<OSPFASConfig xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="OSPF.xsd">

  <!-- Areas -->
  <Area id="0.0.0.0">
    <AddressRange address="192.168.1.0" mask="255.255.255.0" status="Advertise"/>
    <AddressRange address="192.168.2.0" mask="255.255.255.0" status="Advertise"/>
    <AddressRange address="192.168.60.61" mask="255.255.255.255" status="Advertise"/>
    <AddressRange address="192.168.60.62" mask="255.255.255.255" status="Advertise"/>
  </Area>

  <!-- Routers -->
  <Router name="R1"> <!-- R1 -->
    <RFC1583Compatible/>
    <BroadcastInterface ifName="eth0" areaID="0.0.0.0" interfaceOutputCost="1" retransmissionInterval="5" interfaceTransmissionDelay="1" routerPriority="1" helloInterval="10" routerDeadInterval="40" authenticationType="NullType" authenticationKey="0x00"/>
    <PointToPointInterface ifName="eth1" areaID="0.0.0.0" interfaceOutputCost="2" retransmissionInterval="5" interfaceTransmissionDelay="1" helloInterval="10" routerDeadInterval="40" authenticationType="NullType" authenticationKey="0x00"/>
  </Router>

  <Router name="R2"> <!-- R2 -->
    <RFC1583Compatible/>
    <PointToPointInterface ifName="eth0" areaID="0.0.0.0" interfaceOutputCost="2" retransmissionInterval="5" interfaceTransmissionDelay="1" helloInterval="10" routerDeadInterval="40" authenticationType="NullType" authenticationKey="0x00"/>
    <BroadcastInterface ifName="eth1" areaID="0.0.0.0" interfaceOutputCost="1" retransmissionInterval="5" interfaceTransmissionDelay="1" routerPriority="2" helloInterval="10" routerDeadInterval="40" authenticationType="NullType" authenticationKey="0x00"/>
  </Router>

</OSPFASConfig>
